extends layout

block vars
  - var title='Media: Upload'

block content
  div(class="row-fluid")
    div(class="col-md-6 col-md-offset-3")
      form(method="post" enctype="multipart/form-data")
        div(class="form-group")
          label(for="name") Name
            input(type="text" class="form-control" name="name" id="name" readonly="true")
        div(class="form-group")
          label(for="name") File
            input(type="file" name="image" id="image" required="true")
        button(type="submit" class="btn btn-default")
          <i class="fa fa-upload"></i>&nbsp; Upload
  script.
    $(document).on("change", "#image", function() {
      $("#name").val(Date.now() + $("#image").val().replace(/C:\\fakepath\\/i, ''));
    });
    $(function() {
      $(".target-active").find('[href="/dash/media"]').parent().addClass("active");
    });
